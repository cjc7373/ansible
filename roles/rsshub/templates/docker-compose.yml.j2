services:
    rsshub:
        image: {{ docker_registry }}/diygod/rsshub:latest
        restart: always
        ports:
            - '127.0.0.1:1200:1200'
        environment:
            NODE_ENV: production
            PUPPETEER_WS_ENDPOINT: 'ws://browserless:3000'
            DEBUG_INFO: false
        depends_on:
            - browserless

    browserless:
        # See issue 6680
        image: {{ docker_registry }}/browserless/chrome:1.43-chrome-stable
        restart: always
