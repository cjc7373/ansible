---
###############################################################
#                   Authelia configuration                    #
###############################################################

jwt_secret: {{ secret }}
default_redirection_url: {{ auth_server }}

server:
  host: 0.0.0.0
  port: 9091

log:
  level: debug
# This secret can also be set using the env variables AUTHELIA_JWT_SECRET_FILE

totp:
  issuer: coherence.space

# duo_api:
#  hostname: api-123456789.example.com
#  integration_key: ABCDEF
#  # This secret can also be set using the env variables AUTHELIA_DUO_API_SECRET_KEY_FILE
#  secret_key: 1234567890abcdefghifjkl

authentication_backend:
  file:
    path: /config/users_database.yml

access_control:
  default_policy: deny
  rules:
    # Rules applied to everyone
    - domain: "*.coherence.space"
      policy: one_factor

session:
  name: authelia_session
  # This secret can also be set using the env variables AUTHELIA_SESSION_SECRET_FILE
  secret: {{ secret }}
  expiration: 3600  # 1 hour
  inactivity: 300  # 5 minutes
  domain: coherence.space  # Should match whatever your root protected domain is
  remember_me_duration: 1y

  redis:
    host: redis
    port: 6379
    # This secret can also be set using the env variables AUTHELIA_SESSION_REDIS_PASSWORD_FILE
    # password: authelia

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  encryption_key: {{ secret }}
  local:
    path: /config/db.sqlite3

notifier:
  disable_startup_check: true
  filesystem:
    filename: /config/notification.txt

identity_providers:
  oidc:
    hmac_secret: {{ secret }}
    issuer_private_key: |
      {{ issuer_private_key | indent(width=6) }}
    cors:
      endpoints:
        - authorization
        - token
        - revocation
        - introspection
      allowed_origins: "*"
    clients:
      - id: miniflux
        secret: {{ oidc_secret_hash }}
        authorization_policy: one_factor
        redirect_uris:
          - https://rss.coherence.space/oauth2/oidc/callback
        pre_configured_consent_duration: 1w
...
