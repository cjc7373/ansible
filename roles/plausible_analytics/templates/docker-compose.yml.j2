services:
  mail:
    image: {{ docker_registry }}/bytemark/smtp
    networks:
      - default
    restart: always

  plausible_events_db:
    image: {{ docker_registry }}/clickhouse/clickhouse-server:22.6-alpine
    networks:
      - default
    restart: always
    volumes:
      - ./event-data:/var/lib/clickhouse
      - ./clickhouse-config.xml:/etc/clickhouse-server/config.d/logging.xml:ro
      - ./clickhouse-user-config.xml:/etc/clickhouse-server/users.d/logging.xml:ro
    ulimits:
      nofile:
        soft: 262144
        hard: 262144

  plausible:
    image: {{ docker_registry }}/plausible/analytics:v2.0.0
    networks:
      - default
      - database
    restart: always
    command: sh -c "sleep 10 && /entrypoint.sh db createdb && /entrypoint.sh db migrate && /entrypoint.sh db init-admin && /entrypoint.sh run"
    depends_on:
      - plausible_events_db
      - mail
    ports:
      - 127.0.0.1:22214:8000
    env_file:
      - plausible-conf.env
    ulimits:
      nofile:
        soft: 262144
        hard: 262144

networks:
  database:
    external: true